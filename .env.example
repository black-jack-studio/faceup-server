# ==========================================
# FaceUp Environment Variables Template
# ==========================================
# Copy this file to .env and fill in your actual values

# ----- Node Environment -----
NODE_ENV=production

# ----- Server Configuration -----
PORT=10000
API_URL=https://faceup-server.onrender.com

# ----- Session Security -----
SESSION_SECRET=your-random-secret-key-here-change-me

# ----- Database Configuration -----
# Supabase (Production database)
USE_SUPABASE=true
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_DB_PASSWORD=your-database-password

# Legacy environment variables (for backward compatibility)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Option 2: Neon Database (Alternative)
# USE_SUPABASE=false
# DATABASE_URL=postgresql://user:password@host:5432/database
# PGHOST=your-neon-host.neon.tech
# PGPORT=5432
# PGUSER=your-username
# PGPASSWORD=your-password
# PGDATABASE=your-database-name

# ----- Payment Processing -----
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# RevenueCat (for mobile in-app purchases)
REVENUECAT_API_KEY=your-revenuecat-api-key

# ----- OAuth Authentication (Optional) -----
# These are managed by Replit integrations but can be set manually
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# APPLE_CLIENT_ID=your-apple-client-id
# APPLE_TEAM_ID=your-apple-team-id
# APPLE_KEY_ID=your-apple-key-id
# APPLE_PRIVATE_KEY=your-apple-private-key

# ----- Feature Flags -----
# Set to "true" to enable card back seeding in production
# SEED_CARD_BACKS=false
